<div class="row">
  <div class="col-md-12">
  </div>
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{profile.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <div class="well">
      <ul class="list-unstyled">
        <li>
          <h5>{{profile.name}}</h5>
        </li>
        <li>
          <p>{{profile.email}}</p>
        </li>
        <li><strong>{{restaurants.length}}</strong> 已評論餐廳
        </li>
        <li><strong>{{favoritedRestaurants.length}}</strong> 收藏的餐廳
        </li>
        <li><strong>{{followings.length}}</strong> Followings (追蹤者)
        </li>
        <li><strong>{{followers.length}}</strong> Followers (追隨者)
        </li>
        {{#ifCond profile.id authUser}}
          <li><a class="btn btn-primary mt-3" href="/users/{{profile.id}}/edit">edit</a></li>
        {{/ifCond}}
      </ul>
    </div>
  </div>
  <hr>
</div>
{{#ifCond profile.id authUser}}
  <hr>
  <div class="row mt-2">
    <div class="col-md-4 card">
      <h5 class="card-header">{{followings.length}} Followings (追蹤者)</h5>
      <div class="card-body">
        {{#each followings}}
          <div class="mr-2">
            <a href="/users/{{this.id}}">
              <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-7 card">
      <h5 class="card-header">{{restaurants.length}} 已評論餐廳</h5>
      <div class="card-body">
        {{#each restaurants}}
          <div class="mr-2">
            <a href="/restaurants/{{this.id}}">
              <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <hr>
  <div class="row mt-2">
    <div class="col-md-4 card">
      <h5 class="card-header">{{followers.length}} Followers (追隨者)</h5>
      <div class="card-body">
        {{#each followers}}
          <div class="mr-2">
            <a href="/users/{{this.id}}">
              <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-7 card">
      <h5 class="card-header">{{favoritedRestaurants.length}} 收藏的餐廳</h5>
      <div class="card-body">
        {{#each favoritedRestaurants}}
          <div class="mr-2">
            <a href="/restaurants/{{this.id}}">
              <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/ifCond}}